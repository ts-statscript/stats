{
  "name": "@ts-statscript/stats",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-statscript/stats.git"
  },
  "author": {
    "name": "Dereck Mezquita",
    "email": "dereck@mezquita.io"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run clean && tsc",
    "prepublishOnly": "yarn run build",
    "publishAlpha": "npm version prerelease --preid=dev --no-git-tag-version && yarn build && yarn publish --tag dev --non-interactive",
    "format": "prettier --write .",
    "test": "jest",
    "benchmarks": "bun run benchmarks/index.ts",
    "docs": "typedoc --out docs src && cp docs/benchmark-results.md docs/",
    "build-local": "yarn build && yarn test && yarn benchmarks && yarn docs"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "overrides": [
      {
        "files": "*.yml",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "dependencies": {
    "@ts-statscript/base": "^0.0.3-dev.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.26",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}